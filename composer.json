{
  "name": "eonx-com/requesthandlers",
  "description": "Support library to enable Request DTO and Doctrine ParamConverters in Lumen",
  "keywords": [
    "paramconverters",
    "lumen"
  ],
  "license": "BSD-3-Clause",
  "type": "library",
  "autoload": {
    "psr-4": {
      "LoyaltyCorp\\RequestHandlers\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\LoyaltyCorp\\RequestHandlers\\": "tests/"
    }
  },
  "require": {
    "php": "^7.2",
    "eonx-com/apiformats": "^1.0",
    "eonx-com/utils": "^1.0|^2.0",
    "friendsofsymfony/rest-bundle": "^2.5",
    "laravel/lumen-framework": "^6.0",
    "sensio/framework-extra-bundle": "^5.3",
    "symfony/doctrine-bridge": "^4.4",
    "symfony/expression-language": "^4.4",
    "symfony/property-access": "^4.4",
    "symfony/property-info": "^4.4",
    "symfony/serializer": "^4.4",
    "symfony/validator": "^4.4"
  },
  "require-dev": {
    "eonx-com/standards": "^0.3",
    "phpmd/phpmd": "^2.6,!=2.7.0",
    "phpstan/phpstan": "^0.11.6",
    "phpstan/phpstan-phpunit": "^0.11.1",
    "phpstan/phpstan-strict-rules": "^0.11.0",
    "phpunit/phpunit": "^7.0",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "^4.1",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "replace": {
    "loyaltycorp/requesthandlers": "*"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "code-sniffer": "phpcs --standard=vendor/eonx-com/standards/php-code-sniffer/EoneoPay --colors --report=full src tests -p",
    "copy-paste-detector": "phpcpd --ansi --min-lines=5 --min-tokens=70 src tests",
    "mess-detector": "phpmd src,tests text phpmd.xml",
    "phpstan": "phpstan analyze src tests -c phpstan.neon --ansi --level max --memory-limit=2048M",
    "phpunit": "vendor/bin/phpunit --configuration phpunit.xml",
    "coverage": [
      "@phpunit --coverage-text=coverage_output.txt --coverage-html=coverage-html",
      "tar zcf coverage-html.tgz --directory=coverage-html .",
      "easy-test check-coverage -c 100 coverage_output.txt"
    ],
    "standards": [
      "@code-sniffer",
      "@copy-paste-detector",
      "@mess-detector",
      "@phpstan",
      "@phpunit"
    ]
  }
}
